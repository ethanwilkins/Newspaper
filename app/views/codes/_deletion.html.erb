<!-- codes -->

<div id="card">
	<p align="center"><%= translate("Delete codes") %></p>
	<%= form_tag clear_path, method: :delete do %>
		<p><%= text_field_tag :zip_code, nil, placeholder: "Zip code (optional)", class: "form-control" %></p>
		<p class="form-control">
			<%= translate "Clear all" %>
			<%= check_box_tag :clear_all %>
		</p>
		<%= submit_tag translate("Destroy"), class: "btn btn-default btn-lg btn-block" %>
	<% end %>
</div>

<% if @codes.empty? %>
	</br>
<% end %>