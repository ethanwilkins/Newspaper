<div id="card">
<%= form_for @translation, url: translation_path(@translation), method: :patch do |f| %>
	<%= hidden_field_tag :id, @translation.id %>
	<p>
		<%= f.text_field :english, class: "form-control" %>
	</p>
	<p>
		<%= f.text_field :spanish, class: "form-control" %>
	</p>
	<p>
		<%= f.submit translate("Update"), class: "btn btn-default btn-lg btn-block" %>
	</p>
<% end %>
</div>