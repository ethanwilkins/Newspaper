<div id="card">
	<%= form_for @group do |f| %>
		<p>
			<%= text_field_tag :zip_list, nil, placeholder: translate("Zip codes for this group (comma separated ', ')"), class: "form-control" %>
		</p>
		<p>
			<%= text_field_tag :admin_list, nil, placeholder: translate("Admins for this group (names, comma separated ', ')"), class: "form-control" %>
		</p>
		<p>
			<%= f.submit translate("Create"), class: "btn btn-default btn-lg btn-block" %>
		</p>
	<% end %>
</div>