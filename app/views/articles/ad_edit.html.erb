<%= form_for @advert, html: {multipart: true, "data-ajax" => false} do |f| %>
	<div id="card">
		<p>
			<%= f.file_field :image, class: "form-control" %>
		</p>
		<p>
			<%= f.text_area :body, placeholder: translate("Text (optional)"), class: "form-control" %>
		</p>
		<p>
			<%= f.text_field :title, placeholder: translate("Company"), class: "form-control" %>
		</p>
		<p>
			<%= f.text_field :hyperlink, placeholder: translate("URL"), class: "form-control" %>
		</p>
		<p>
			<%= f.text_field :zip_code, placeholder: translate("Zip"), class: "form-control" %>
		</p>
		<p>
			<%= f.submit translate("Update"), class: "btn btn-default btn-lg btn-block" %>
		</p>
	</div>
	</br>
<% end %>
