<article>
	</br><div align="center"><%= link_to article.title, article_path(article) %></div>

	<% if article.image.url %>
		</br><div align="center"><%= link_to image_tag(article.image,
			id: :post_image), article_path(article) %></div></br>
	<% end %>

	<p id="article_body"><%= article.body %></p></br>
</article>