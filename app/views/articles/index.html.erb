<% if current_user.writer or current_user.admin %>
	<div id="large_button">
		<%= button_to "Write an article", new_article_path, method: :get %>
	</div></br>
<% end %>

<% @articles.each do |article| %>
	<div id="card">
		<%= render "content", article: article %>
		<%= render "info", article: article %>
	</div></br>
<% end %>
		