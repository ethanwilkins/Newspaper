<% if current_user.writer or current_user.admin %>
	<div id="large_button">
		<%= button_to "Write an article", new_article_path, method: :get %>
	</div></br>
<% end %>

<% @articles.each do |article| %>
	<%= render "card", article: article %>
<% end %>

<% if @articles.empty? %>
	<div id="card"><p align="center">No articles have been published yet.</p></div>
<% end %>