<% if current_user.writer or current_user.admin %>
	<div id="large_button">
		<%= button_to "Write an article", new_article_path, method: :get %>
	</div></br>
<% end %>

<% @articles.each do |article| %>
	<div id="card">
		<div align="center"><%= link_to article.title, article_path(article) %></div>
		<div align="center"><%= image_tag article.image %></div>
		<div align="center"><%= article.body %></div>
	</div></br>
<% end %>
		