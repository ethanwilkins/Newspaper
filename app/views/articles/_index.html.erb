<!-- articles -->

<% if current_user and current_user.writer %>
	<div id="large_button">
		<%= button_to new_article_path, method: :get, class: "btn btn-default btn-lg btn-block" do %>
			<span class="glyphicon glyphicon-pencil"></span> <%= translate("Write an article") %>
		<% end %>
	</div></br>
<% end %>	

<% if current_user %>
	<div align="center">
		<%= button_to events_path, method: :get, class: "btn btn-default btn-lg" do %>
			<span class="glyphicon glyphicon-calendar"></span> <%= translate("Local Events") %>
		<% end %>
	</div></br>
<% end %>

<% if @articles.empty? %>
	<div id="card"><p align="center">
		<%= translate("No articles have been published yet.") %>
	</p></div>
<% end %>

<%= render "articles/feed" %>

</br>