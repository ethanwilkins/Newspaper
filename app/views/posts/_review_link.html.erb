<!-- posts -->

<% if has_feature? :rank_feedback %>
	<% if post.user != current_user %>
		<% title = translate("Provide feedback for this post.") %>
	<% else %>
		<% title = translate("View feedback for your post.") %>
	<% end %>
	<%= link_to new_post_feedback_path(post), id: :review_stars_link, title: title do %>
		<%= render "feedbacks/stars", item: post, vertical: true %>
	<% end %>
<% end %>