</br>
<% if post.image.url %>
	</br><div align="center">
		<%= link_to image_tag(post.image, id: :standard_post_image), post_path(post) %>
	</div></br>
<% end %>

<% if post.body.present? or post.hashtags.present? %>
	<p align="center" id="post_body_text">
		<% for word in post.body.split(' ') %>
			<% if word =~ /\A#{URI::regexp}\z/ and word.include? "youtube" %>
				<% word = word.slice 0...word.index("&") if word.include? "&" %>
				<% word.sub! "watch?v=", "embed/" if word.include? "watch?v=" %>
				<iframe width="90%" height="315" src="<%= word %>" frameborder="0" allowfullscreen>
				</iframe></br>
			<% elsif word =~ /\A#{URI::regexp}\z/ %>
				<%= link_to word + " ", word %>
			<% else %>
				<%= word + " " %>
			<% end %>
		<% end %>

		<% post.hashtags.each do |tag| %>
			<%= link_to tag.tag, tagged_path(tag.tag) %>
			<%= " " %>
		<% end %>
	</p>
<% end %>