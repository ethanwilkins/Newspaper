<%= render "new", post_type: :question %>

<% pos_on_page = 0 %>
<% ad_pos = Random.new.rand @questions.size %>
<% for question in @questions %>
	<% unless question.comments.present? or question.translation_requested %>
		<%= render "posts/card", post: question, post_type: :question %>
	<% end %>
	<%= render "articles/ad_card" if ad_pos == pos_on_page %>
	<% pos_on_page += 1 %>
<% end %>