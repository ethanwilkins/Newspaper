<!-- posts -->

<% if current_user %>
<div id="card">
	<% if @tab %>
		<% if @tab.features.exists? action: :articles %>
			<%= link_to translate("Write an article"),
				new_tab_article_path(@tab), class: :top_right_link %>
		<% end %>
		<% if @tab.features.exists? action: :invite_attendance %>
			<%= link_to translate("Plan an event"),
				new_tab_event_path(@tab), class: :top_left_link %>
		<% end %>
		<%=raw "</br>" if @tab.features.
			where(action: [:articles, :invite_attendance]).present? %>
	<% end %>
	
	<%= form_for @post, html: {multipart: true, "data-ajax" => false} do |f| %>
		<% if @tab %>
			<%= hidden_field_tag :tab_id, params[:id] %>
			<% if @tab.features.exists? action: :photosets %>
				<p>
					<%= f.text_field :title, placeholder: translate("Add a title for photosets"),
						class: "form-control" %>
				</p>
			<% end %>
		<% elsif @subtab %>
			<%= hidden_field_tag :subtab_id, params[:id] %>
		<% end %>
		<p>
			<%= f.text_area :body, placeholder: translate("Start a thread..."), class: "form-control" %>
		</p>
		<p>
			<% if @tab and @tab.features.exists? action: :photosets %>
				<%= f.fields_for :pictures do |p| %>
					<%= f.file_field :image, multiple: true,
						name: "pictures[image][]", class: "form-control" %>
				<% end %>
			<% else %>
				<%= f.file_field :image, class: "form-control" %>
			<% end %>
		</p>
		<p class="form-control">
			<%= f.label translate("Request translation") %>
			<%= f.check_box :translation_requested %>
		</p>
		<% if @tab %>
			<% if @tab.features.exists? action: "post_repopulation" %>
				<% options = [[translate("Repopulation interval (optional)"), nil]] %>
				<% (7..30).each { |i| options << i } %>
				<p>
					<%= f.select :repopulation_interval, options_for_select(options), {}, class: "form-control" %>
				</p>
			<% end %>
			<% if @tab.features.exists? action: "sales_dialogue" %>
				<p class="form-control">
					<%= f.label translate("Item for sale") %>
					<%= f.check_box :sale %>
				</p>
			<% end %>
		<% end %>
		<p>
			<%= f.submit translate("Post"), class: "btn btn-default btn-lg btn-block" %>
		</p>
	<% end %>
</div>
<% end %>