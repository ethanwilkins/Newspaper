<!-- posts -->

<div id="card">
	<%= render "posts/time_ago", post: post %>
	<%= render "posts/posted_by", post: post %>
	<%= render "folders/inquire", post: post %>
	<%= render "posts/vote", post: post %>

	<table class="bottom_left_link_table">
		<tr>
			<td class="link_table_spacing">
				<%= render "posts/comment_link", post: post %>
			</td>
			<% if privileged? %>
			<td class="link_table_spacing">
				<%= link_to "Edit", edit_post_path(post), class: :card_link,
					title: translate("Edit this post") %>
			</td>
			<td>
				<%= link_to "Delete", destroy_post_path(post), method: :delete, data: {
					confirm: translate('Are you sure you want to delete this post?') },
					title: translate("Permanently delete this post"), class: :card_link %>
			</td>
			<% end %>
		</tr>
	</table>

	<%= render "posts/content", post: post %>
</div>