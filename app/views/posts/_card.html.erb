<% time_ago = time_ago_in_words(post.created_at) + " ago" %>

<% if time_ago.include? "about" %>
	<% time_ago.slice! "about " %>
<% end %>

<div id="card">
	<%= link_to time_ago, post_path(post), id: :top_right_time %>
	
	<%= render "content", post: post %>
	<%= render "comment_link", post: post %>
</div></br>