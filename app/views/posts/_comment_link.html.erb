<% unless post.comments.empty? %>
	<%= link_to translate("Comment") + " #{post.comments.size}", post_path(post),
		title: translate("Leave a comment"), id: :bottom_left_link %>
<% else %>
	<%= link_to translate("Comment"), post_path(post),
		title: translate("Leave a comment"), id: :bottom_left_link %>
<% end %>