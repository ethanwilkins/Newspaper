<% if current_user.id != post.user_id %>
	<% unless Vote.up_voted?(post, current_user) %>
		<% if post.up_votes.size > 0 %>
			<% link_label = "Like #{post.up_votes.size}" %>
		<% else %>
			<% link_label = "Like" %>
		<% end %>
		<%= link_to link_label, up_vote_post_path(post), id: :bottom_right_link %>
	<% else %>
		<%= link_to "Unlike #{post.up_votes.size}", un_vote_post_path(post), id: :bottom_right_link %>
	<% end %>
<% else %>
	<%= link_to "Likes #{post.up_votes.size}", post_path(post), id: :bottom_right_link %>
<% end %>