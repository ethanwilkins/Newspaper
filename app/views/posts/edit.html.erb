<!-- posts -->

<div id="card">
	<% if current_user and current_user.admin %>
		<%= form_for @post, html: {multipart: true, "data-ajax" => false} do |f| %>
			<p>
				<%= f.text_field :body, placeholder: translate("Body"), class: "form-control" %>
			</p>
			<p>
				<%= f.file_field :image, class: "form-control" %>
			</p>
			</p>
			<p>
				<%= f.submit translate("Update"), class: "btn btn-default btn-lg btn-block" %>
			</p>
		<% end %>
	<% end %>
</div>
</br>