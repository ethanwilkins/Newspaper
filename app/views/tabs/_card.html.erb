<!-- tabs -->

<div id="card">
	<div id="top_right_link">
		<%= link_to cherry_pick_path(tab), class: "btn btn-default",
			title: translate("Always show this tab regardless of locale") do %>
			<span class="glyphicon glyphicon-star"></span>
		<% end %>
	</div>
	<div align="center">
		<div>
			<%= link_to image_tag(tab.icon, size: "50x50", id: :tab_icon), tab_path(tab) %>
		</div>
		
		<div>
			<%= link_to text_shown(tab, :name), tab_path(tab) %>
		</div>
		
		<% if current_user.admin and tab.approved.nil? %>
			<% if tab.sponsored and tab.company %>
				<p>
					<%= User.find(tab.user_id).name.capitalize +
						" requested verification of their company, " + tab.company %>
				</p>
			<% end %>
			<%= render "tabs/approve_deny", tab: tab %>
		<% end %>
	</div>
</div>