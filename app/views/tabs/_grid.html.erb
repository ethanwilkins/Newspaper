<!-- tabs -->

<% card_type = @subtabs ? "subtabs/card" : "tabs/card" %>
<% tab_type = @subtabs ? :subtab : :tab %>

<div class="container-fluid">
	<% interval = 0 %>
	<% for tab in tabs %>
		<% if interval == 0 %>
		<div class="row">
			<div class="col-xs-6 col-md-4">
				<%= render card_type, tab_type => tab %>
			</div>
		<% elsif interval < 3 %>
			<div class="col-xs-6 col-md-4">
				<%= render card_type, tab_type => tab %>
			</div>
		<% elsif interval % 3 == 0 %>
		</div>
		<div class="row">
			<div class="col-xs-6 col-md-4">
				<%= render card_type, tab_type => tab %>
			</div>
		<% elsif interval > 3 %>
			<div class="col-xs-6 col-md-4">
				<%= render card_type, tab_type => tab %>
			</div>
		<% end %>
		<% interval += 1 %>
	<% end %>
</div>