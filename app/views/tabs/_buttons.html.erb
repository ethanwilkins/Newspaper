<!-- tabs -->

<div id="top_right_link">
	<div class="btn-group">
		<% if current_user.admin %>
			<%= link_to destroy_tab_path(@tab), method: :delete, class: "btn btn-default",
				data: { confirm: 'Are you sure you want to delete this tab?' } do %>
				<span class="glyphicon glyphicon-trash"></span>
			<% end %>
			<%= link_to edit_tab_path(@tab), class: "btn btn-default" do %>
				<span class="glyphicon glyphicon-edit"></span>
			<% end %>
		<% end %>
		<% if @tab.approved %>
			<%= link_to new_tab_feature_path(@tab), class: "btn btn-default" do %>
				<span class="glyphicon glyphicon-plus-sign"></span>
			<% end %>
		<% end %>
	</div>
</div>