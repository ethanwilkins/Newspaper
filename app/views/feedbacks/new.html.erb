<!-- to show average, as well as other users reviews and stars for new feedback -->

<div id="card">
	<div align="center">
		<div role="group" class="btn-group">
			<% 5.times do |stars| %>
				<%= link_to(feedback_path(stars: stars+1), method: :post, class: "btn btn-default btn-lg") do %>
					<span class="glyphicon glyphicon-star-empty"</span>
				<% end %>
			<% end %>
		</div>
	</div></br>
	<% if @feedback.id.nil? %>
		<%= form_for @feedback, method: :post do |f| %>
			<%= render "feedbacks/review_field", f: f %>
		<% end %>
	<% else %>
		<%= form_for @feedback, url: feedbacks_update_path, method: :patch do |f| %>
			<%= hidden_field_tag feedback_id: @feedback.id if @feedback.id %>
			<%= render "feedbacks/review_field", f: f %>
		<% end %>
	<% end %>
</div>