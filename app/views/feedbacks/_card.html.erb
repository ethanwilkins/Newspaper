<!-- feedbacks -->

<div id="card">
	<%= link_to translate("Reviewed by") + " " + feedback.reviewer.name.capitalize,
		user_path(feedback.reviewer.name), class: :top_right_link %>
		
	<%= link_to(translate("Remove"), destroy_feedback_path(feedback), method: :delete,
		data: { confirm: translate('Are you sure you want to remove this review?') },
		class: :bottom_right_link) if master? %>
	
	<table class="top_left_link" title="<%= translate("The users rating of this item.") %>">
		<tr>
		<% 5.times do |stars| %>
			<td class=
				<% if feedback.id and feedback.stars and feedback.stars > stars %>
					"glyphicon glyphicon-star"
				<% else %>
					"glyphicon glyphicon-star-empty"
				<% end %>
			</td>
		<% end %>
		</tr>
	</table>
	
	<div align="center" id="comment_body_text">
		<%= feedback.review %>
	</div>
</div>