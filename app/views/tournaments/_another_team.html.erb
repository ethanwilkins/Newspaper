<!-- polls -->

<% options = [[translate("Choose a team"), nil]] %>
<% SportsTeam.all.each { |team| options << [team.name, team.id] } %>
<p>
	<%= select_tag "team_#{team_num}".to_sym, options_for_select(options), class: "form-control" %>
</p>

<p id="add_team_anchor">
	<%= link_to translate("Add team"), add_team_path(team_num), remote: true, class: "btn btn-default btn-lg btn-block" %>
</p>