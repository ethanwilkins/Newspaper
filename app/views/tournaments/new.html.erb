<!-- tournaments -->

<%= form_for @tournament do |f| %>
	<div id="card">
		<%= f.label translate("Cteate a tournament"), class: :form_label_text %>
		<% options = [[translate("Choose the first team"), nil]] %>
		<% SportsTeam.all.each { |team| options << [team.name, team.id] } %>
		</p>
			<%= select_tag :team1, options_for_select(options), class: "form-control" %>
		</p>
		</p>
			<% num_of_matches = [translate("Choose the number of matches")] %>
			<% (5..20).each { |i| num_of_matches << i } %>
			<%= select_tag :num_of_matches, options_for_select(num_of_matches), class: "form-control" %>
		</p>
		<p>
			<%= f.file_field :image, class: "form-control" %>
		</p>
		<p>
			<%= f.submit translate("Submit"), class: "btn btn-default btn-lg btn-block" %>
		</p>
	</div>
<% end %>
