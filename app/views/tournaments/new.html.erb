<!-- tournaments -->

<%= form_for @tournament, url: tab_tournaments_path do |f| %>
	<%= hidden_field_tag :tournament_id, @tournament.id %>
	<div id="card">
		<%= f.label translate("Create a tournament"), class: :form_label_text %>
		<%= render "tournaments/another_team", team_num: 1 %>
		<p>
			<% num_of_matches = [translate("Number of matches")]; (5..20).each { |i| num_of_matches << i } %>
			<%= select_tag :num_of_matches, options_for_select(num_of_matches), class: "form-control" %>
		</p>
		<p>
			<%= f.text_field :location, placeholder: translate("Location"), class: "form-control" %>
		</p>
		<p class="form-control">
			<%= f.label translate("Date") %>
			<%= f.date_select :date, use_month_numbers: true, class: "form-control" %>
		</p>
		<p>
			<%= f.submit translate("Submit"), class: "btn btn-default btn-lg btn-block" %>
		</p>
	</div>
<% end %>
