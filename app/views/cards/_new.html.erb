<div id="card">
<%= form_for @card do |f| %>
	<%= hidden_field_tag :game_board_id, params[:id] %>
	<div class="input-group">
		<%= text_field_tag :code, nil, placeholder: translate("Redeem your code here"), class: "form-control" %>
		<span class="input-group-btn" title="<%= translate("Redeem your code to unlock a new card!") %>">
			<button class="btn btn-default" type="submit">
				<i class="glyphicon glyphicon-gift"></i>
			</button>
		</span>
	</div>
<% end %>
</div>
</br>
