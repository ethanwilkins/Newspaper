<%= form_for @poll, html: {multipart: true, "data-ajax" => false} do |f| %>
	<% if @tab %>
		<%= hidden_field_tag :tab_id, @tab.id %>
		<%= render "tabs/name_header", tab: @tab, item: "Event" %>
	<% end %>
	
	<div id="card">
		<%= f.label translate("Create a poll"), class: :form_label_text %>
		<p>
			<%= f.text_field :question, placeholder: translate("Question"), class: "form-control" %>
		</p>
		<p>
			<%= f.file_field :image, class: "form-control" %>
		</p>
		
		<%= render "polls/another_choice", choice_num: 1 %>
		
		<p>
			<%= f.submit translate("Submit"), class: "btn btn-default btn-lg btn-block" %>
		</p>
	</div>
<% end %>