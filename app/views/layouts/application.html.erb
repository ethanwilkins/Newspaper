<!DOCTYPE html>
<html>
<head>
	<title>El Heroe</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>

	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.css" />
	<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
	<script src="http://code.jquery.com/mobile/1.4.2/jquery.mobile-1.4.2.min.js"></script>
</head>


<body>
	<div data-role="page" data-url="<%= request.path %>">

		<div data-role="header">
			<table align="center">
				<tr>
					<td>
						<%= button_to "", root_path, method: :get,
							"data-icon" => "home", "data-iconpos" => "notext" %>
					</td>
					<% unless current_user %>
						<td>
							<%= link_to "Sign up", root_url %> or
							<%= link_to "Log in", sessions_new_path %>
						</td>
					<% else %>
						<td>
							<%= button_to "Log out", sessions_destroy_path, method: :get %>
						</td>
					<% end %>
				</tr>
			</table>
		</div>

		<div data-role="content">
			<%= yield %>
		</div>

	</div>
</body>
</html>
