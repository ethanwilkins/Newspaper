// tips

var kind = '<%= @tip.kind %>';
var tip = $('#' + kind);
var fadeOutS = 1500;
var fadeInS = 3500;

tip.fadeOut(fadeOutS);

// will trigger hidden tips in order
switch (kind) {
case 'welcome_tip':
	$("#elheroe_button_tip").fadeIn(fadeInS);
	$("#skip_tour_tip").fadeOut(fadeOutS);
	break;
case 'elheroe_button_tip':
	$("#user_profile_button_tip").fadeIn(fadeInS);
	$("#dropdown_button_tip").fadeIn(fadeInS);
	break;
case 'user_profile_button_tip':
	$("#social_button_tip").fadeIn(fadeInS);
	break;
case 'social_button_tip':
	$("#notes_button_tip").fadeIn(fadeInS);
	break;
case 'notes_button_tip':
	$("#games_button_tip").fadeIn(fadeInS);
	break;
case 'global_tabs_button_tip':
	$("#tab_description_tip").fadeIn(fadeInS);
	break;
case 'tab_description_tip':
	$("#create_tab_tip").fadeIn(fadeInS);
	break;
case 'skip_tour_tip':
	$("#welcome_tip").fadeOut(fadeOutS);
	break;
}
