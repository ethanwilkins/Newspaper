// tips

var kind = '<%= @tip.kind %>';
var tip = $('#' + kind);

tip.fadeOut(1500);

// will trigger hidden tips in order
switch (kind) {
case 'welcome_tip':
	$("#elheroe_button_tip").fadeIn(3500);
	break;
case 'elheroe_button_tip':
	$("#user_profile_button_tip").fadeIn(3500);
	break;
case 'user_profile_button_tip':
	$("#notes_button_tip").fadeIn(3500);
	break;
case 'notes_button_tip':
	$("#games_button_tip").fadeIn(3500);
	break;
case 'global_tabs_button_tip':
	$("#tab_description_tip").fadeIn(3500);
	break;
case 'tab_description_tip':
	$("#create_tab_tip").fadeIn(3500);
	break;
}
