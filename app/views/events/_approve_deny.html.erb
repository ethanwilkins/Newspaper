<% if current_user.admin %>
	<div align="center">
		<div class="btn-group">
			<%= link_to approve_event_path(event), class: "btn btn-default",
				data: { confirm: "Are you sure you want to approve the event?" } do %>
				Approve
			<% end %>
			
			<%= link_to deny_event_path(event), class: "btn btn-default",
				data: { confirm: "Are you sure you want to deny the event?" } do %>
				Deny
			<% end %>
		</div>
	</div>
<% end %>