<div align="center">
	<%= link_to new_event_path, class: "btn btn-default btn-lg",
		 title: translate("Plan an event for your local community") do %>
		<span class="glyphicon glyphicon-calendar"></span> <%= translate("Plan an event") %>
	<% end %>
</div></br>

<% for event in @events %>
	<%= render "events/card", event: event %>
<% end %>

<% if @events.empty? %>
	<div id="card">
		<div align="center">
			<%= translate("There aren't any upcoming events right now.") %>
		</div>
	</div>
<% end %>

</br>