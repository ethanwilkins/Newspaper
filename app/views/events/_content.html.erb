<!-- events -->

<div align="center">
	<h3><%= text_shown(event, :title) %></h3>

	<% if event.image.url %>
		<div><%= image_tag event.image %></div></br>
	<% end %>

	<p>
		<% body = text_shown(event, :body) %>
		<% if body.present? %>
			<% for word in body.split(' ') %>
				<% unless word.include? "#" and word.size > 1 %>
					<%= render "posts/embed", word: word %>
				<% else %>
					<% tag = event.hashtags.find_by_tag word %>
					<% if tag.index == body.index(word) %>
						<%= link_to tag.tag, tagged_path(tag.tag) %>
						<%= " " %>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	</p>
	
	<div><strong>When: </strong><%= event.date %></div></br>
	<% if event.location.present? %>
		<div><strong>Where: </strong><%= event.location %></div></br>
	<% end %>
</div>