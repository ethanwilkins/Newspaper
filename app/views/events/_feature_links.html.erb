<!-- events -->

<% if event.going.empty? %>
	<%= link_to attendance_path(event), id: :event_going_link do %>
		<i class="fa fa-user fa-lg"></i>
	<% end %>
<% else %>
	<%= link_to attendance_path(event), id: :event_going_link do %>
		<i class="fa fa-user fa-lg"></i> <%= event.going.size.to_s %>
	<% end %>
<% end %>

<%= render "events/review_link", event: event %>