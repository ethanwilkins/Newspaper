<h3 align="center"><%= translate("Going") %></h3></br>

<% for user in @event.going %>
	<% user = User.find_by_id(user.user_id) %>
	<%= render "users/card", user: user %>
<% end %>

<% if @event.going.empty? %>
	<div id="card">
		<div align="center">
			<%= translate("No one has RSVPed yet.") %>
		</div>
	</div>
<% end %>