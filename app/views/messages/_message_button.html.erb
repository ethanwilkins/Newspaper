<% if current_user and @user != current_user %>
	<% folder = Folder.folder_between(current_user, @user) %>
	<% if folder %>
		<%= link_to translate("Message"), folder_path(folder),
			title: translate("Continue your conversation"), class: :card_link %>
	<% else %>
		<%= link_to translate("Message"), new_folder_path(@user.name),
			title: translate("Begin a conversation"), class: :card_link %>
	<% end %>
<% end %>