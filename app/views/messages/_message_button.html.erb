<% if current_user and @user != current_user %>
	<% folder = Folder.folder_between(current_user, @user) %>
	<% if folder %>
		<%= link_to translate("Message"), folder_path(folder), id: :top_right_link %>
	<% else %>
		<%= link_to translate("Message"), new_folder_path(@user), id: :top_right_link %>
	<% end %>
<% end %>