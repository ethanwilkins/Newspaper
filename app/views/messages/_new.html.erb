<!-- messages -->

<div id="card">
	<%= form_for @message do |f| %>
		<%= hidden_field_tag :folder_id, @folder.id %>
		<% if @sales_post and @sales_post.user == current_user %>
			<%= hidden_field_tag(:message_type, :sales_reply) %>
		<% elsif @sales_post %>
			<%= hidden_field_tag(:message_type, :sales_inquiry) %>
		<% end %>
		<div class="input-group">
			<%= f.text_area :text, placeholder: translate((@sales_post ? \
				"Ask the seller a question..." : "Send a message...")), class: "form-control" %>
			<span class="input-group-btn">
				<button class="btn btn-default btn-lg" type="submit">
					<i class="glyphicon glyphicon-send"></i>
				</button>
			</span>
		</div>
	<% end %>
	</div>
</div>