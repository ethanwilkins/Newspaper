<!-- game_boards -->

<%= render "game_boards/new" %>

<% @game_boards.each do |board| %>
	<div id="card">
		<% if board.cards.size < 1 %>
			<p align="center"> <%= translate "You have no cards on this board" %></p>
		<% end %>
		
		<%= render "game_boards/grid", cards: board.cards %></br>
		<%= button_to translate("Show"), game_board_path(board),
			method: :get, title: translate("View this game board"),
			class: "btn btn-default btn-lg btn-block" %>
	</div>
<% end %>

<% if @game_boards.empty? %>
	<div id="card">
		<div align="center">
			<%= translate("You don't have any boards yet.") %>
		</div>
	</div>
<% end %>

