<div id="nav" data-role="header">
	<table align="center">
		<tr>
			<td>
				<%= button_to "Home", root_path, method: :get %>
			</td>
			<% unless current_user %>
				<td>
					<%= link_to "Sign up", new_user_path %> or
					<%= link_to "Log in", root_url %>
				</td>
			<% else %>
				<td>
					<%= button_to "Social", posts_path, method: :get %>
				</td>
				<td>
					<%= button_to "Games", user_game_boards_path(current_user), method: :get %>
				</td>
				<td>
					<% notes = current_user.notes.unchecked.size.to_s %>
					<% if current_user.notes.unchecked.size > 0 %>
						<% notes = "+ " + current_user.notes.unchecked.size.to_s %>
						<%= button_to notes, notes_path, method: :get %>
					<% else %>
						<%= button_to notes, notes_path, method: :get %>
					<% end %>
				</td>
			<% end %>
		</tr>
	</table>
	<% if current_user %>
		<div id="top_right">
			<%= link_to("Admin", admin_path) if current_user.admin %>
			<%= link_to("Log out", sessions_destroy_path,
				data: { confirm: 'Are you sure?' }) unless current_user.admin %>
		</div>
	<% end %>
</div>