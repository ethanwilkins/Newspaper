<!-- folders -->

<% if current_user and post.sale and post.user != current_user %>
	<% folder = Folder.folder_between(current_user, post.user, post) %>
	<% if folder %>
		<%= link_to translate("Inquire"), folder_path(folder),
		title: translate("Continue dialogue"), class: :bottom_center_right_link %>
	<% else %>
		<%= link_to translate("Inquire"), inquire_path(post, post.user.name),
		title: translate("Begin a dialogue for this item"), class: :bottom_center_right_link %>
	<% end %>
<% end %>
