<!-- folders -->

<% if @sales_post %>
	<%= render "posts/card", post: @sales_post %>
<% end %>

<div id="card">
	<%= form_for @folder do |f| %>
		<%= hidden_field_tag :user_id, @receiver.id %>
		<%= hidden_field_tag(:post_id, @sales_post.id) if @sales_post %>
		<div class="input-group">
			<%= text_area_tag :text, nil, placeholder: translate((@sales_post ? \
				"Ask the seller a question..." : "Send a message...")), class: "form-control" %>
			<span class="input-group-btn">
				<button class="btn btn-default btn-lg" type="submit">
					<i class="glyphicon glyphicon-send"></i>
				</button>
			</span>
		</div>
	<% end %>
</div>