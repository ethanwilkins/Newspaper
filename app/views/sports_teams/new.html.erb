<!-- sports teams -->

<%= form_for @team do |f| %>
	<div id="card">
		<%= f.label translate("Create a team"), class: :form_label_text %>
		<p>
			<%= f.text_field :name, placeholder: translate("Name your team"), class: "form-control" %>
		</p>
		<p>
			<%= f.file_field :icon, class: "form-control" %>
		</p>
		<p>
			<%= f.submit translate("Submit"), class: "btn btn-default btn-lg btn-block" %>
		</p>
	</div>
<% end %>
