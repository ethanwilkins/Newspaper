<% if current_user and current_user.admin %>
	<% if @note %>
		<%= render "notes/new" %>
	<% end %>
	
	<div id="card">
		<%= form_for notes_select_path, :method => "get" do |f| %>
			<% options = [[translate("Choose a user to notify"), nil]] %>
			<% @users.each { |user| options << [user.name, user.id] } %>
			<p><%= f.select :user_id, options_for_select(options), {}, class: "form-control" %></p>
			<%= f.submit "Select", class: "btn btn-default btn-lg btn-block" %>
		<% end %>
	</div>
<% end %>

</br>