<!-- features -->

<div id="card">
	<%= form_for @feature, html: {multipart: true, "data-ajax" => false} do |f| %>
		<%= hidden_field_tag :tab_id, params[:tab_id] %>
		<p>
			<%= f.select :action, options_for_select([[translate("Choose a feature to add"), nil],
			[translate("Post expiration"), "post_expiration"], [translate("Post repopulation"), "post_repopulation"],
			[translate("Sales dialogue"), "sales_dialogue"], [translate("Tagged"), "tagged"]]), {}, class: "form-control" %>
		</p>
		<p>
			<%= f.submit translate("Create"), class: "btn btn-default btn-lg btn-block" %>
		</p>
	<% end %>
</div>
</br>